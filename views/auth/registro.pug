extends ../layout/index

block contenido
  .py-10  
    //- h1.text-4xl.my-10.font-extrabold.text-center.text-shadow-lg ValleCaro
    //- h1.text-4xl.font-bold.text-white.drop-shadow-lg.shadow-black.black.text-center ValleCaro
    h1.text-4xl.font-bold.text-purple-700.drop-shadow-lg.shadow-white.black.text-center ValleCaro &nbsp;
      span.font-normal.text-shadow-lg Inmobiliaria
    h2.text-center.text-2xl.font-extrabold.mt-5= pagina

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores 
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-lg= error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow.rounded-lg
        form.space-y-5(method="POST" action="/auth/registro" noValidate)
          input(type="hidden" name="_csrf" value=csrfToken)
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre")  Tu nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-500.rounded-lg.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.mt-5(for="email")  Email de Registro
            input#email.w-full.px-3.py-2.border.border-gray-500.rounded-lg.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value= usuario ? usuario.email : '')
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.mt-5(for="password")  Password
            input#password.w-full.px-3.py-2.border.border-gray-500.rounded-lg.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.mt-5(for="repetir_password")  Repetir Password
            input#repetir_password.w-full.px-3.py-2.border.border-gray-500.rounded-lg.placeholder-gray-400(placeholder="Repite tu Password" type="password" name="repetir_password")
          div.flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
            a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi password
          input(class="w-full text-gray-200 bg-purple-600 hover:bg-purple-800 hover:text-white rounded-lg py-2 uppercase font-bold shadow-lg" type="submit" value="Crear Cuenta")
