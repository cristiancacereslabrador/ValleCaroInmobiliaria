extends ../layout/admin

block styles
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
  meta(name="csrf-token" content=csrfToken)
  //- link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
  .py-10
    h1.text-4xl.font-bold.text-purple-700.drop-shadow-lg.shadow-white.black.text-center ValleCaro &nbsp;
      span.font-normal.text-shadow-lg Inmobiliaria
    h2.text-center.text-2xl.font-extrabold.mt-5= pagina

    //- if errores
    //-   div(class="max-w-md mx-auto my-10")
    //-     each error in errores 
    //-       p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-lg= error.msg

    div(class="bg-white py-8 px-4 rounded-lg mx-auto max-w-4xl my-10 md:px-10")
      form(id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded-lg flex-col justify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)
        input(type="hidden" name="_csrf" value=csrfToken)
        
      button(id="publicar" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg text-white font-bold uppercase cursor-pointer" type="button") Publicar Propiedad
 
block scripts 
  script(src="/js/agregarImagen.js")